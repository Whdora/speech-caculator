    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="0,1,2,3,4,5"
        android:layout_gravity="bottom"
        android:layout_margin="10dp"
        >

        <TableRow android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/bksp"
                android:textAllCaps="false"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="25dip"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:layout_margin="5dp"
                android:drawableLeft="@mipmap/dele"
                android:paddingLeft="15dp"/>

            <Button
                android:id="@+id/c"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:textSize="25dip"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:layout_margin="5dp"
                android:layout_column="1"
                android:drawableLeft="@mipmap/clear"
                android:paddingLeft="15dp" />

            <Button
                android:id="@+id/mod"
                android:layout_height="wrap_content"
                android:text="%"
                android:layout_column="2"
                android:layout_weight="1"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:layout_margin="5dp"
                android:textSize="25dip"
                android:layout_width="match_parent" />

            <Button
                android:id="@+id/divide"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:text="÷"
                android:layout_weight="1"
                android:background="@drawable/mul_background"
                android:layout_margin="5dp"
                android:textSize="25dip"
                android:textColor="#ffffff"
                android:layout_column="3" />

        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/seven"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:layout_margin="5dp"
                android:textSize="25dip"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:text="7"/>
            <Button
                android:id="@+id/eight"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:layout_margin="5dp"
                android:textSize="25dip"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:text="8"/>
            <Button
                android:id="@+id/nine"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:layout_margin="5dp"
                android:textSize="25dip"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:text="9"/>

            <Button
                android:id="@+id/mul"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="×"
                android:color="#f7f5f3"
                android:layout_margin="5dp"
                android:textSize="25dip"
                android:background="@drawable/mul_background"
                android:textColor="#ffffff"
                android:layout_column="3" />

        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/four"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:textSize="25dip"
                android:layout_margin="5dp"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:text="4"/>
            <Button
                android:id="@+id/five"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:textSize="25dip"
                android:layout_margin="5dp"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:text="5"/>
            <Button
                android:id="@+id/six"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:textSize="25dip"
                android:layout_margin="5dp"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:text="6"/>

            <Button
                android:id="@+id/sub"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="-"
                android:background="@drawable/mul_background"
                android:textColor="#ffffff"
                android:color="#f7f5f3"
                android:layout_margin="5dp"
                android:textSize="25dip"
                android:layout_column="3" />

        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/one"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:layout_margin="5dp"
                android:textSize="25dip"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:text="1"/>
            <Button
                android:id="@+id/two"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:layout_margin="5dp"
                android:textSize="25dip"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:text="2"/>
            <Button
                android:id="@+id/three"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:layout_margin="5dp"
                android:textSize="25dip"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:text="3"/>

            <Button
                android:id="@+id/add"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="+"
                android:background="@drawable/plus_background"
                android:color="#f7f5f3"
                android:layout_margin="5dp"
                android:textSize="25dip"
                android:textColor="#ffffff"
                android:layout_column="3" />
        </TableRow>

        <TableRow>
            <Button
                android:id="@+id/zero"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:textSize="25dip"
                android:layout_margin="5dp"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:text="0"/>
            <Button
                android:id="@+id/dot"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:textSize="25dip"
                android:layout_margin="5dp"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:text="."/>

            <Button
                android:id="@+id/left"
                android:layout_height="wrap_content"
                android:text="()"
                android:layout_weight="1"
                android:color="#f7f5f3"
                android:textSize="25dip"
                android:layout_margin="5dp"
                android:textColor="@drawable/btn_textcolor"
                android:background="@drawable/btn_background"
                android:layout_column="2" />

            <Button
                android:id="@+id/equal"
                android:layout_height="wrap_content"
                android:text="="
                android:layout_weight="1"
                android:background="@drawable/mul_background"
                android:color="#f7f5f3"
                android:textSize="25dip"
                android:layout_margin="5dp"
                android:textColor="#ffffff"
                android:layout_column="3" />

        </TableRow>

    </TableLayout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ebebeb"
        android:orientation="horizontal">
        <ImageButton android:id="@+id/show_keyboard"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:background="@mipmap/ico_key"
            />
        <Button
            android:id="@+id/speech_button"
            android:layout_height="wrap_content"
            android:text="按住说话"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:background="@drawable/num_button"
            android:color="#f7f5f3"
            android:textSize="25dip"
            android:layout_margin="15dp"
            android:textColor="#7f8388"
            android:layout_column="3"
            android:drawableLeft="@mipmap/ico_mic"
            android:paddingLeft="60dp"
            android:paddingRight="40dp"
            />
    </LinearLayout>


</LinearLayout>
